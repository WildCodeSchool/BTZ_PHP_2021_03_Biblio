{% extends 'base.html.twig' %}

{% block title %}Notice index{% endblock %}

{% block body %}
    <h1>Notice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Summary</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notice in notices %}
            <tr>
                <td>{{ notice.id }}</td>
                <td>{{ notice.summary|raw }}</td>
                <td>{{ notice.creationDate ? notice.creationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('notice_show', {'id': notice.id}) }}">show</a>
                    <a href="{{ path('notice_edit', {'id': notice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notice_add') }}">Create new</a>
{% endblock %}
