{% extends 'admin/layout.html.twig' %}

{% block title %}Notice{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Notice</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ notice.id }}</td>
                        </tr>
                        <tr>
                            <th>Summary</th>
                            <td>{{ notice.summary|raw }}</td>
                        </tr>
                        <tr>
                            <th>Creation_date</th>
                            <td>{{ notice.creationDate ? notice.creationDate|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            
                <a href="{{ path('notice_list') }}">back to list</a>
            
                <a href="{{ path('notice_edit', {'id': notice.id}) }}">edit</a>
            
                {{ include('/admin/notice/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
