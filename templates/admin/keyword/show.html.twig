{% extends 'admin/layout.html.twig' %}

{% block title %}Keyword{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Keyword</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ keyword.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ keyword.name }}</td>
                        </tr>
                        <tr>
                            <th>Geolocalisation</th>
                            <td>{{ keyword.geolocalisation ? 'Yes' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>
            
                <a href="{{ path('keyword_list') }}">back to list</a>
            
                <a href="{{ path('keyword_edit', {'id': keyword.id}) }}">edit</a>
            
                {{ include('/admin/keyword/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>
 
{% endblock %}
