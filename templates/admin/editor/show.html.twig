{% extends 'admin/layout.html.twig' %}

{% block title %}Editor{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6">
                <h1>Editor</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ editor.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ editor.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ editor.address }}</td>
                        </tr>
                    </tbody>
                </table>
            
                <a href="{{ path('editor_list') }}">back to list</a>
            
                <a href="{{ path('editor_edit', {'id': editor.id}) }}">edit</a>
            
                {{ include('/admin/editor/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>
  
{% endblock %}
