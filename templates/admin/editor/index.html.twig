{% extends 'admin/layout.html.twig' %}

{% block title %}Editor index{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6">
                <h1>Editor index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for editor in editors %}
                        <tr>
                            <td>{{ editor.id }}</td>
                            <td>{{ editor.name }}</td>
                            <td>{{ editor.address }}</td>
                            <td>
                                <a href="{{ path('editor_show', {'id': editor.id}) }}">show</a>
                                <a href="{{ path('editor_edit', {'id': editor.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            
                <a href="{{ path('editor_add') }}">Create new</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
