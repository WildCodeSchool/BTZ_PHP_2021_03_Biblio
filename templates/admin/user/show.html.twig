{% extends 'admin/layout.html.twig' %}

{% block title %}User
{% endblock %}

{% block content %}

<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8">
				<h1>User</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						</tr>
						<tr>
							<th>Password</th>
							<td>{{ user.password }}</td>
						</tr>
						<tr>
							<th>Firstname</th>
							<td>{{ user.firstname }}</td>
						</tr>
						<tr>
							<th>Lastname</th>
							<td>{{ user.lastname }}</td>
						</tr>
						<tr>
							<th>Phone</th>
							<td>{{ user.phone }}</td>
						</tr>
						<tr>
							<th>Address</th>
							<td>{{ user.address }}</td>
						</tr>
						<tr>
							<th>Newsletter</th>
							<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
						</tr>
						<tr>
							<th>Slug</th>
							<td>{{ user.slug }}</td>
						</tr>
					</tbody>
				</table>
			
				<a class="btn btn-outline-primary btn-sm" href="{{ path('user_list') }}">back to list</a>
			
				<a class="btn btn-outline-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
			
				{{ include('/admin/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>

{% endblock %}
