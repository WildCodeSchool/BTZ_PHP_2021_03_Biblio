{% extends 'admin/layout.html.twig' %}

{% block title %}User
{% endblock %}

{% block content %}

<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8">
				<h1>Utilisateur {{ user.fullname }}</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						</tr>
						<tr>
							<th>Prénom</th>
							<td>{{ user.firstname }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ user.lastname }}</td>
						</tr>
						<tr>
							<th>Téléphone</th>
							<td>{{ user.phone }}</td>
						</tr>
						<tr>
							<th>Adresse</th>
							<td>{{ user.address }}</td>
						</tr>
						<tr>
							<th>Inscrit à la newsletter</th>
							<td>{{ user.newsletter ? 'Oui' : 'Non' }}</td>
						</tr>
					</tbody>
				</table>
				<a class="btn btn-outline-primary btn-sm mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
					{{ include('/admin/user/_delete_form.html.twig') }}
				<a class="btn btn-outline-secondary btn-sm mt-2" href="{{ path('user_list') }}">Retour</a>
			
            </div>
        </div>
    </div>
</section>

{% endblock %}
