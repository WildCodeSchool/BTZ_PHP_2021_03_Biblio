{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
				<h2>Liste des utilisateurs</h2>
				<div class="py-3">
					<a class="btn btn-outline-primary btn-sm" href="{{ path('thematic_add') }}" role="button">Création Nouveau Thématique</a>
					<a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Retour Menu Admin</a>	
				</div>

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Roles</th>
							<th>Firstname</th>
							<th>Lastname</th>
							<th>Phone</th>
							<th>Address</th>
							<th>Newsletter</th>
							<th>Slug</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								<td>{{ user.firstname }}</td>
								<td>{{ user.lastname }}</td>
								<td>{{ user.phone }}</td>
								<td>{{ user.address }}</td>
								<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
								<td>{{ user.slug }}</td>
								<td>
									<a class="btn btn-outline-primary btn-sm mb-2" href="{{ path('user_show', {'id': user.id}) }}">show</a>
									<a class="btn btn-outline-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			
				<a class="btn-outline-primary btn-sm" href="{{ path('user_add') }}">Create new</a>
            </div>
        </div>
    </div>
</section>

{% endblock %}
