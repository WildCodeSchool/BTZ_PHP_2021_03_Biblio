{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
				<h2>Liste des utilisateurs</h2>
				<div class="py-3">
					<a class="btn btn-outline-primary btn-sm" href="{{ path('user_add') }}" role="button">Ajouter</a>
					<a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Accueil</a>	
				</div>

				<table class="table">
					<thead>
						<tr>
							<th>Email</th>
							<th>Prénom / Nom</th>
							<th>Rôles</th>
							<th>Téléphone</th>
							<th>Adresse</th>
							<th>Newsletter</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.email }}</td>
								<td>{{ user.fullname }}</td>
								<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								<td>{{ user.phone }}</td>
								<td>{{ user.address }}</td>
								<td>{{ user.newsletter ? 'Oui' : 'Non' }}</td>
								<td>
									<a class="btn btn-outline-primary btn-sm mb-2" href="{{ path('user_show', {'id': user.id}) }}">Détails</a>
									<a class="btn btn-outline-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			
				<div class="py-3">
					<a class="btn btn-outline-primary btn-sm" href="{{ path('user_add') }}" role="button">Ajouter</a>
					<a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Accueil</a>	
				</div>
			</div>
        </div>
    </div>
</section>

{% endblock %}
