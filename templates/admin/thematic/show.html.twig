{% extends 'base.html.twig' %}

{% block title %}Thématique
{% endblock %}

{% block body %}
	<h2>Détail Thématique</h2>
	<div class="table-responsive">
		<table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
			<tbody>
				<tr>
					<th>Nom</th>
					<td>{{ thematic.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ thematic.description }}</td>
				</tr>
			</tbody>
		</table>
		<a class="btn btn-outline-primary btn-sm" href="{{ path('thematic_edit', {'id': thematic.id}) }}" role="button">Edition</a>
		{{ include('/admin/thematic/_delete_form.html.twig') }}
		<a class="btn btn-outline-secondary btn-sm" href="{{ path('thematic_list') }}" role="button">Retour à la Liste</a>

	{% endblock %}
