<form method="post" action="{{ path('localisation_delete', {'id': localisation.id}) }}" onsubmit="return confirm('Souhaitez-vous supprimer cette localisation ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ localisation.id) }}">
	<button class="btn btn-outline-primary btn-sm">Supprimer</button>
</form>
