{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des Localisations
{% endblock %}

{% block content %}
	<h2 style="padding-top:2%">Liste des Localisations</h2>
	<a class="btn btn-outline-primary btn-sm" href="{{ path('localisation_add') }}" role="button">Création Nouvelle Localisation</a>
	<a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Retour Menu Admin</a>

	<div class="table-responsive">
		<table class="table table-bordered table-sm table-hover" id="dataTable" width="100%" cellspacing="0">
			<thead>
				<tr class="table-active">
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for localisation in localisations %}
					<tr>
						<td>{{ localisation.name }}</td>
						<td>
							<a class="btn btn-outline-primary btn-sm" href="{{ path('localisation_show', {'id': localisation.id}) }}" role="button">Détail</a>
							<a class="btn btn-outline-primary btn-sm" href="{{ path('localisation_edit', {'id': localisation.id}) }}" role="button">Edition</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a class="btn btn-outline-primary btn-sm" href="{{ path('localisation_add') }}" role="button">Création Nouvelle Localisation</a>
	<a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Retour Menu Admin</a>
{% endblock %}
