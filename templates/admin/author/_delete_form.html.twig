<form method="post" action="{{ path('auteur_delete', {'id': author.id}) }}" onsubmit="return confirm('Souhaitez-vous supprimer cet auteur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button class="btn btn-outline-primary btn-sm">Supprimer</button>
</form>
