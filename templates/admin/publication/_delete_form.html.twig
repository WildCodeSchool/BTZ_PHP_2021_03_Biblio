<form method="post" action="{{ path('publication_admin_delete', {'id': publication.id}) }}" onsubmit="return confirm(' Voulez-vous supprimer cette publication ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
    <button class="btn btn-outline-primary btn-sm">Supprimer</button>
</form>
