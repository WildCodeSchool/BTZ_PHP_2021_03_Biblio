{% extends 'admin/layout.html.twig' %}

{% block title %}BookCollection index{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>BookCollection index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for book_collection in book_collections %}
                        <tr>
                            <td>{{ book_collection.id }}</td>
                            <td>{{ book_collection.name }}</td>
                            <td>
                                <a href="{{ path('book_collection_show', {'id': book_collection.id}) }}">show</a>
                                <a href="{{ path('book_collection_edit', {'id': book_collection.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            
                <a href="{{ path('book_collection_add') }}">Create new</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
