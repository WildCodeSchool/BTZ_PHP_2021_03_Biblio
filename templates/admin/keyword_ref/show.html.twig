{% extends 'admin/layout.html.twig' %}

{% block title %}Mot-clé de référence
{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
				<h2>Mot clé {{ keyword_ref.name }} </h2>
				<div class="table-responsive">
					<table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
						<tbody>
			
							<tr>
								<th>Nom</th>
								<td>{{ keyword_ref.name }}</td>
							</tr>
			
						</tbody>
					</table>
					<a class="btn btn-outline-primary btn-sm mb-2" href="{{ path('keyword_ref_edit', {'id': keyword_ref.id}) }}" role="button">Editer</a>
					{{ include('/admin/keyword_ref/_delete_form.html.twig') }}
					<a class="btn btn-outline-secondary btn-sm mt-2" href="{{ path('keyword_ref_list') }}" role="button">Retour</a>
			
			
            </div>
        </div>
    </div>
</section>
	{% endblock %}
