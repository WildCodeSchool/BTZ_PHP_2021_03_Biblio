{% extends 'base.html.twig' %}

{% block title %}Liste des Emprunts{% endblock %}

{% block body %}
    <h1>Liste des Emprunts</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre de Publication<th>
                <th>Date de Reservation </th>
                <th>Date d'Emprunt</th>
                <th>Date Limite</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrow in borrows %}
            <tr>
                {# <td>{{ borrow.id }}</td> #}
                <td>{{ borrow.publication.title }}</td> 
                <td>{{ borrow.reservationDate ? borrow.reservationDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrow.borrowedDate ? borrow.borrowedDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrow.limitDate ? borrow.limitDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrow.comment }}</td>
                <td>
                    <a href="{{ path('emprunt_show', {'id': borrow.id}) }}">Vue</a>
                    <a href="{{ path('emprunt_edit', {'id': borrow.id}) }}">Edition</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emprunt_add') }}">Cr√©ation Nouvel Emprunt</a>
    <div></div>
    <a href="{{ path('admin') }}">Retour Menu Admin</a>
{% endblock %}
