{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des mots-clés géographique{% endblock %}

{% block content %}
<section class="py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="py-4 pl-1">
                    <h2 class="py-2">Liste des mots-clés géographique</h2>
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('keyword_geo_add') }}">Ajouter</a>
                    <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin') }}" role="button">Retour</a>
				</div>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="table-active">
                                <th>Nom</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for keyword_geo in keyword_geos %}
                            <tr>
                                <td>{{ keyword_geo.name }}</td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('keyword_geo_show', {'id': keyword_geo.id}) }}" role="button">Détails</a>
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('keyword_geo_edit', {'id': keyword_geo.id}) }}" role="button">Editer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun Enregistrement</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
   
{% endblock %}
