{% extends 'base.html.twig' %} {% block title %}Publication{% endblock %} {%
block body %}
<section>
  <div class="container">
    <div class="row">
      <div class="col-12 py-5 text-center">
        <nav class="py-2" style="--bs-breadcrumb-divider: '>'"aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent">
            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
            <li class="breadcrumb-item"><a href="/publication/list">Publications</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ publication.title }}</li>
          </ol>
        </nav>
        <p>Publication</p>
        <h1 class="h2">
          {{ publication.title }}
        </h1>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div
        class="col-12 py-15"
        style="background-position: center; background-image: url({{
          asset('build/images/pexels-cottonbro-4861362.jpg')
        }})"
      ></div>
    </div>
  </div>
</section>

<div class="container py-4">
  <div class="row justify-content-center py-9">
    <div class="col-12 col-lg-10 col-xl-8">
      <div class="row">
        <div class="col-12">
          <ul class="list-group list-group-flush">
            {% if is_granted('ROLE_AUDAP_MEMBER') %}
              <li class="list-group-item">
                <span class="strong">Id:</span> {{ publication.id }}
              </li>
            {% endif %}
            <li class="list-group-item">
              <span class="strong">Title:</span> {{ publication.title }}
            </li>
            <li class="list-group-item">
              <span class="strong">Mention:</span>
              {{ publication.mention }}
            </li>
            <li class="list-group-item">
              <span class="strong">Publication_date:</span>
              {{ publication.publicationDate ? publication.publicationDate|date('Y-m-d H:i:s') : '' }}
            </li>
            <li class="list-group-item">
              <span class="strong">Paging:</span>
              {{ publication.paging }}
            </li>
            <li class="list-group-item">
              <span class="strong">Volume_number:</span>
              {{ publication.volumeNumber }}
            </li>
            <li class="list-group-item">
              <span class="strong">Summary:</span>
              {{ publication.summary }}
            </li>
            <li class="list-group-item">
              <span class="strong">Issn_isbn:</span>
              {{ publication.issnIsbn }}
            </li>
            <li class="list-group-item">
              <span class="strong">Support:</span>
              {{ publication.volumeNumber }}
            </li>
            <li class="list-group-item">
              <span class="strong">Volume_number:</span>
              {{ publication.support }}
            </li>
            {% if is_granted('ROLE_AUDAP_MEMBER') %}
            <li class="list-group-item">
              <span class="strong">Source_address:</span>
              {{ publication.sourceAddress }}
            </li>
            <li class="list-group-item">
              <span class="strong">Url:</span> {{ publication.url }}
            </li>
            <li class="list-group-item">
              <span class="strong">Cote:</span> {{ publication.cote }}
            </li>
            <li class="list-group-item">
              <span class="strong">Auteur Notice:</span> {{ publication.user.fullname }}
            </li>
            <li class="list-group-item">
              <span class="strong">Date de mise a jour Notice:</span> {{ publication.updateDate | date("d/m/Y")}}
            </li>
            <li class="list-group-item">
                <span class="strong">Emprunt:</span>
            </li>
            {% for borrow in publication.borrows %}
              <li class="list-group-item">
                <span class="strong">Nom emprunteur:</span> {{ borrow.user.fullname }}
              </li>
              <li class="list-group-item">
                <span class="strong">date emprunté:</span> {{ borrow.borrowedDate | date("d/m/Y")}}
              </li>
            {% else %}
              <li class="list-group-item">
              <span>jamais emprunté </span> 
               </li>
            {% endfor %}  
            <li class="list-group-item">
              <span class="strong">Access:</span>
              {{ publication.access }}
            </li>
            {% endif %}
          </ul>
        </div>
        <div class="col-12 py-3">
          <a class="btn btn-outline-success" href="{{ path('publication_list') }}">back to list</a>
          <a class="btn btn-outline-success"href="{{ path('publication_edit', { id: publication.id }) }}">edit</a>
          {{ include("publication/_delete_form.html.twig") }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
