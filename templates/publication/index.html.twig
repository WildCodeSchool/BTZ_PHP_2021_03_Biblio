{% extends 'base.html.twig' %}

{% block title %}Publications{% endblock %}

{% block body %}

    <section class="pb-12">
        <div class="container">
          <div class="row">
            <div class="col-12 py-4 text-center pb-10">
              <h3 class="h2">RÃ©sultats de recherche</h3>
            </div>
          </div>
          <div class="row">
    {% for publication in publications %}
        <div class="col-12 col-md-4">
          <img src="{{
            asset('build/images/pexels-emily-768125.jpg')
          }}" class="card-img-top" alt="...">
          <div class="card mb-6">
            <div class="card-body">
              <h5 class="card-title">{{ publication.title }}</h5>
              <h6 class="card-subtitle mb-2 text-muted">
                {{ publication.type.name }}
              </h6>
              <p class="card-text">{{ publication.thematic.name }}</p>
              <p class="card-text">
                {{ publication.publicationDate ? publication.publicationDate|date('Y-m-d') : '' }}
              </p>
              <p class="card-text">{{ publication.support }}</p>
              <a class="btn btn-outline-success" href="{{ path('publication_show', { id: publication.id }) }}">consulter</a>
              <a class="btn btn-outline-success" href="{{ path('publication_edit', {'id': publication.id}) }}">edit</a>
            </div>
          </div>
        </div>
          {% else %}
          <p>no records found</p>
          {% endfor %}
        <div class="col-12">
            {% if is_granted('ROLE_AUDAP_MEMBER') %}
            <a class="btn btn-outline-success" href="{{ path('publication_new') }}">Chargement d'une nouvelle publication</a>
            {% endif %}
        </div>
    
          </div>
        </div>
      </section>

{% endblock %}
